# Tickr Backend - Environment Variables Template
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tickr
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tickr
DATABASE_LOGGING=true
DATABASE_SYNCHRONIZE=false
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tickr123
REDIS_URL=redis://:tickr123@localhost:6379
REDIS_TTL=300
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# CORS
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# AWS Configuration (Use LocalStack in development)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT=http://localhost:4566

# S3 Storage
S3_BUCKET=tickr-dev
S3_ENDPOINT=http://localhost:4566
S3_FORCE_PATH_STYLE=true

# SES Email (Use Maildev in development)
SES_FROM_EMAIL=noreply@tickr.local
SES_REGION=eu-west-1

# SMTP Email (Maildev for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=tickr
SMTP_PASS=tickr123
SMTP_FROM=noreply@tickr.local
SMTP_SECURE=false

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Session
SESSION_SECRET=your-super-secret-session-key
SESSION_MAX_AGE=86400000

# API Documentation
SWAGGER_ENABLE=true
SWAGGER_PATH=api/docs

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false

# Monitoring & Logging
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_SQL_QUERIES=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Queue (Bull/Redis)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=tickr123

# Cache
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
