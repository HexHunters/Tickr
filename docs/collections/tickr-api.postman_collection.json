{
  "info": {
    "_postman_id": "tickr-api-collection",
    "name": "Tickr API",
    "description": "Collection for testing the Tickr Event Ticketing Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}",
              "host": ["{{baseUrl}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.accessToken) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh-token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh-token"]
            }
          }
        }
      ]
    },
    {
      "name": "Events (Public)",
      "item": [
        {
          "name": "Get Published Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Search Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/search?q=concert&page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["events", "search"],
              "query": [
                { "key": "q", "value": "concert" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Get Events by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/category/MUSIC?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["events", "category", "MUSIC"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Get Upcoming Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/upcoming?days=30&page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["events", "upcoming"],
              "query": [
                { "key": "days", "value": "30" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/:id",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Events (Protected)",
      "item": [
        {
          "name": "Create Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.id) {",
                  "    pm.collectionVariables.set('eventId', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Summer Music Festival 2026\",\n  \"description\": \"A fantastic summer music event featuring top artists.\",\n  \"category\": \"MUSIC\",\n  \"startDate\": \"2026-07-15T18:00:00.000Z\",\n  \"endDate\": \"2026-07-15T23:00:00.000Z\",\n  \"venue\": {\n    \"name\": \"Central Park Arena\",\n    \"address\": \"123 Park Avenue\",\n    \"city\": \"New York\",\n    \"country\": \"USA\",\n    \"postalCode\": \"10001\"\n  },\n  \"capacity\": 5000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Summer Music Festival 2026 - Updated\",\n  \"description\": \"An amazing summer music event featuring top artists worldwide.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/:id",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" }
              ]
            }
          }
        },
        {
          "name": "Publish Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/:id/publish",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id", "publish"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" }
              ]
            }
          }
        },
        {
          "name": "Cancel Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/:id",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" }
              ]
            }
          }
        },
        {
          "name": "Add Ticket Type",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.ticketTypes && jsonData.ticketTypes.length > 0) {",
                  "    pm.collectionVariables.set('ticketTypeId', jsonData.ticketTypes[0].id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"VIP\",\n  \"description\": \"VIP access with backstage pass\",\n  \"price\": 150.00,\n  \"quantity\": 100,\n  \"maxPerOrder\": 4,\n  \"salesStartDate\": \"2026-06-01T00:00:00.000Z\",\n  \"salesEndDate\": \"2026-07-14T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/:id/ticket-types",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id", "ticket-types"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" }
              ]
            }
          }
        },
        {
          "name": "Update Ticket Type",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 175.00,\n  \"quantity\": 150\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/:id/ticket-types/:typeId",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id", "ticket-types", ":typeId"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" },
                { "key": "typeId", "value": "{{ticketTypeId}}" }
              ]
            }
          }
        },
        {
          "name": "Remove Ticket Type",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/:id/ticket-types/:typeId",
              "host": ["{{baseUrl}}"],
              "path": ["events", ":id", "ticket-types", ":typeId"],
              "variable": [
                { "key": "id", "value": "{{eventId}}" },
                { "key": "typeId", "value": "{{ticketTypeId}}" }
              ]
            }
          }
        },
        {
          "name": "Get Organizer Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/organizer/:organizerId?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["events", "organizer", ":organizerId"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ],
              "variable": [
                { "key": "organizerId", "value": "{{userId}}" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
